COPY files/rust.tar.gz /opt
WORKDIR /opt
RUN mkdir rust
RUN tar xf rust.tar.gz --strip-components=1 --directory rust
WORKDIR rust
RUN ./install.sh
WORKDIR /root
COPY files/id_rsa .ssh/
RUN chmod 0700 .ssh
RUN chmod 0600 .ssh/id_rsa
RUN ssh-keyscan bitbucket.org >> .ssh/known_hosts
RUN git clone git@bitbucket.org:nevdelap/ned.git
RUN mkdir bin
COPY files/build .
RUN chmod +x build
RUN ./build
CMD ./build